<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        app:cardElevation="5dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/subject_name_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="subject name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lecturer_nameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_name_Id"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:text="Imie i nazwisko prowadzacego" />

            <TextView
                android:id="@+id/odID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/subject_name_Id"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/subject_name_Id"
                android:gravity="top|left"
                android:text="O    D"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/subject_name_Id"
                android:layout_alignRight="@id/subject_name_Id"
                android:gravity="top|right"
                android:text="D   O"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salaID"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="SALA"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rodzajzajecID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="W"
                android:layout_alignBottom="@id/salaID"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/terminyUwagiID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Terminy/Uwagi"
                android:layout_toRightOf="@id/salaID"
                android:layout_toLeftOf="@id/rodzajzajecID"
                android:textAlignment="center"
                android:layout_below="@id/lecturer_nameID"
                android:gravity="bottom"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/subgroupID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/rodzajzajecID"
                android:layout_centerVertical="true"
                android:text="A/B"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>



